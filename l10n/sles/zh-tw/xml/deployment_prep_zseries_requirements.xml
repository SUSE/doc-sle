     <colspec colnum="1" colname="col1"/>
     <colspec colnum="2" colname="col2"/>
     <thead>
      <row>
       <entry>
        <para>
         安裝類型
        </para>
       </entry>
       <entry>
        <para>
         最低硬碟要求
        </para>
       </entry>
      </row>
     </thead>
     <tbody>
      <row>
       <entry>
        <para>
         文字模式
        </para>
       </entry>
       <entry>
        <para>
         1.5 GB
        </para>
       </entry>
      </row>
      <row>
       <entry>
        <para>
         最小系統
        </para>
       </entry>
       <entry>
        <para>
         2.5 GB
        </para>
       </entry>
      </row>
      <row>
       <entry>
        <para>
         GNOME 桌面
        </para>
       </entry>
