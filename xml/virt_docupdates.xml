   <varlistentry>
    <term><xref linkend="cha.virt.support"/></term>
    <listitem>
     <itemizedlist>
      <listitem>
       <para>
        Added PowerKVM and updated list in <xref linkend="virt.support.hosts"/>
        (<link xlink:href="https://bugzilla.suse.com/show_bug.cgi?id=984119"/>
