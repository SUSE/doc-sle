root = true
[*]
end_of_line = lf
insert_final_newline = false
charset = utf-8

[*.xml]
indent_style = space
indent_size = 1
max_line_length = 79
trim_trailing_whitespace = true
insert_final_newline = true

[*.ent]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.adoc]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab
