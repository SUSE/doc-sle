<!-- 23. DHCP-->
    <term><xref linkend="cha.dhcp"/>
    </term>
    <listitem>
     <itemizedlist>
      <listitem>
       <para>
        Removed dhcpcd as it is no longer shipped (Fate #316111).
       </para>
      </listitem>
     </itemizedlist>
    </listitem>
   </varlistentry>
   <varlistentry>
<!-- 25. Samba -->
    <term><xref linkend="cha.samba"/>
    </term>
    <listitem>
     <itemizedlist>
      <listitem>
       <para>
        Added section <xref linkend="samba.advanced"/>.
       </para>
      </listitem>
      <listitem>
       <para>
        Added section <xref linkend="samba.advanced.compress"/>.
       </para>
      </listitem>
      <listitem>
       <para>
        Added section <xref linkend="samba.advanced.snapshots"/>.
       </para>
      </listitem>
     </itemizedlist>
    </listitem>
   </varlistentry>
   <varlistentry>
<!-- 26. Sharing File Systems with NFS -->
