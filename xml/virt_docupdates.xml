  <!--list of general issues that apply to all books-->
  <xi:include href="common_docupdates_sp1_i.xml"/>
  <variablelist>
   <varlistentry>
    <term>General</term>
    <listitem>
     <itemizedlist>
      <listitem>
       <para>
        Added <xref linkend="cha.libvirt.networks"/>.
       </para>
      </listitem>
      <listitem>
       <para>
        Rewrote large parts of the &pciback; documentation since &kvm;
